<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quantico_bold</item>
    </style>

    <style name="TextStyle.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.MarvelApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>