<resources>

    <style name="Widget.Theme.MarvelApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <!--Button Text Styles-->
    <style name="ButtonTextStyle" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/FontSize7x</item>
    </style>

    <style name="ButtonTextStyle.Main">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/red_button_background</item>

    </style>

    <style name="ButtonTextStyle.Second">
        android:textColor="@color/green"
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/white_button_background</item>
    </style>

</resources>